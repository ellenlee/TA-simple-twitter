<ul class="nav nav-tabs">
  <li role="presentation"><%= link_to "Tweets", admin_tweets_path %></li>
  <li role="presentation" class="active"><%= link_to "Users", admin_users_path %></li>
</ul>

<br>

<div class="col-md-4 pull-right">

  <%= form_tag "#" do %>

    <h3>Filter</h3>
    <p>Role:
      <%= radio_button_tag :role, "normal"%>
      <%= label_tag :role, "normal "%>
      <%= radio_button_tag :role, "admin"%>
      <%= label_tag :role, "admin "%>
      <%= submit_tag "Submit" %>
      <%= submit_tag "Reset" %>
    </p>
    <hr>

    <h3>Search</h3>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    <div class="form-group">
      <%= label_tag :created_at %>
      <%= date_field_tag :created_at %>
    </div>
    <%= submit_tag 'Submit'%>
  <% end %>

  <br>

</div>

<div class="col-md-8">


  <%= button_to "Bulk Delete" %><br>
  <table class="table table-bordered">
    <tr>
      <th></th>
      <th>#</th>
      <th>Created_at</th>
      <th>Name</th>
      <th>Role</th>
      <th><%= link_to "Tweets▼" %></th>
      <th><%= link_to "Followings▼" %></th>
      <th><%= link_to "Followers▼" %></th>
      <th><%= link_to "likes▼" %></th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= check_box_tag "ids[]", user.id, false %></td>
      <td><%= user.id %></td>
      <td><%= user.created_at.strftime('%F') %></td>
      <td><%= user.name %></td>
      <td><%= user.role %></td>
      <td><%= user.tweets_count %></td>
      <td><%= user.followings.size %></td>
      <td><%= user.followers.size %></td>
      <td><%= user.liked_tweets.size %></td>
    </tr>
    <% end %>
  </table>

</div>
