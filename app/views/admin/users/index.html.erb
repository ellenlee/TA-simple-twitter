<ul class="nav nav-tabs">
  <li role="presentation"><%= link_to "Tweets", admin_tweets_path %></li>
  <li role="presentation" class="active"><%= link_to "Users", admin_users_path %></li>
</ul>

<br>

<table class="table table-bordered">
  <tr>
    <th>#</th>
    <th>Created_at</th>
    <th>Name</th>
    <th>Introduction</th>
    <th>Tweets</th>
    <th>Followings</th>
    <th>Followers</th>
    <th>likes</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.created_at.strftime('%F') %></td>
      <td><%= user.name %></td>
      <td><%= user.introduction&.truncate(50) %></td>
      <td><%= user.tweets_count %></td>
      <td><%= user.followings.size %></td>
      <td><%= user.followers.size %></td>
      <td><%= user.liked_tweets.size %></td>
    </tr>
  <% end %>

</table>
